@page
@model webapp.Pages.Aktorzyy.CreateModel

@{
    ViewData["Title"] = "Tworzenie";
}

<h1>Tworzenie</h1>

<h4>Aktor</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Aktorzy.imie" class="control-label"></label>
                <input asp-for="Aktorzy.imie" class="form-control" />
                <span asp-validation-for="Aktorzy.imie" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aktorzy.nazwisko" class="control-label"></label>
                <input asp-for="Aktorzy.nazwisko" class="form-control" />
                <span asp-validation-for="Aktorzy.nazwisko" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Aktorzy.wiek" class="control-label"></label>
                <input asp-for="Aktorzy.wiek" class="form-control" />
                <span asp-validation-for="Aktorzy.wiek" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
