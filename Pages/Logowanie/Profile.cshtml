@page
@model webapp.Pages.Logowanie.ProfileModel
@{
    ViewData["Title"] = "Edycja profilu";
    Layout = "../Shared/_LayoutUser.cshtml";
}
<html>

<body>

    <h3>Edycja profilu</h3>
    <form method="post" asp-page="profile">
        <table>
            <tr>
                <td>Numer telefonu</td>
                <td>
                    <input asp-for="@Model.klient.nr_telefonu" />
                </td>
            </tr>
            <tr>
                <td>Hasło</td>
                <td>
                    <input type="password" asp-for="@Model.klient.haslo" />
                </td>
            </tr>
            <tr>
                <td>Imie</td>
                <td>
                    <input asp-for="@Model.klient.imie" />
                </td>
            </tr>
            <tr>
                <td>Nazwisko</td>
                <td>
                    <input asp-for="@Model.klient.nazwisko" />
                </td>
            </tr>
            <tr>
                <td>&nbsp;</td>
                <td>
                    <input type="submit" value="Zapisz " />   |
                    <a asp-page="Welcome">Powrót</a>
                </td>

            </tr>
        </table>
    </form>

</body>
</html>