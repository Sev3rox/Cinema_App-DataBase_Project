@page
@model webapp.Pages.Seansee.CreateModel

@{
    ViewData["Title"] = "Tworzenie";
}

<h1>Tworzenie</h1>

<h4>Seans</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Seanse.data" class="control-label"></label>
                <input asp-for="Seanse.data" class="form-control" />
                <span asp-validation-for="Seanse.data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Seanse.SaleId" class="control-label"></label>
                <select asp-for="Seanse.SaleId" class="form-control" asp-items="ViewBag.SaleId"></select>
            </div>
            <div class="form-group">
                <label asp-for="Seanse.FilmyId" class="control-label"></label>
                <select asp-for="Seanse.FilmyId" class="form-control" asp-items="ViewBag.FilmyId"></select>
            </div>
            <div class="form-group">

                Cena &nbsp&nbsp&nbsp&nbsp&nbsp

                <input asp-for="@Model.cena" />


            </div>
            <div class="form-group">
                <input type="submit" value="Utwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
